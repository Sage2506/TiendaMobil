<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.ProductDetail">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sage.foodsharebook.Dishes.DishDetailsActivity"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_prod_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            >

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto"
                />

            <TextView
                android:id="@+id/tv_prod_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                />
            <TextView
                android:id="@+id/tv_prod_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_buy_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprar" />
            <Button
                android:id="@+id/btn_add_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar a Carrito" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>